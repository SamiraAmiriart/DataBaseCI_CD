{
  "ConnectionStrings": {
    "Production": "Server=prod-server;Database=YourDatabaseName;Trusted_Connection=True;"
  },
  "Migration": {
    "ScriptPath": "/migrations/stage-to-prod.sql"
  },
  "SqlCmd": {
    "Path": "/usr/bin/sqlcmd" 
  },
  "Backup": {
    "Path": "/backups"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/cd-prod-deploy-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}